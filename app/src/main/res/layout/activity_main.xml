<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text To Speach"
        android:gravity="center_horizontal"
        android:layout_margin="18dp"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/ed_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the text to switch it into speach"
        android:layout_marginTop="18dp"
        android:layout_margin="13dp"
        android:background="@drawable/audio_container"
        
        />

        <LinearLayout
            android:id="@+id/audio_container"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/green"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38dp"
            android:visibility="invisible"
            >
          <!--  <com.google.android.material.divider.MaterialDivider
                android:layout_width="218dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:backgroundTintMode="@color/black"
                android:backgroundTint="@color/black"
                android:background="@color/black"
                android:layout_marginLeft="18dp"
                />-->
            <LinearLayout
                android:id="@+id/line_progressor"
                android:layout_width="218dp"
                android:layout_height="5dp"
                android:background="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:orientation="vertical"
                >
            </LinearLayout>
            <ImageView
                android:id="@+id/img_play"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/play"
                android:layout_marginStart="13dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_switch"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/bt_save"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Save audio"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>