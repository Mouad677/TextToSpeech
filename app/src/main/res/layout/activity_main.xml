<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text To Speech"
        android:gravity="center_horizontal"
        android:layout_margin="18dp"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/ed_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the text to switch it into speech"
        android:layout_marginTop="18dp"
        android:layout_margin="13dp"
        android:gravity="center"
        android:background="@drawable/text_container"
        />

        <LinearLayout
            android:id="@+id/audio_container"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/green"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38dp"
            android:visibility="invisible"
            >

            <LinearLayout
                android:id="@+id/line_progressor"
                android:layout_width="218dp"
                android:layout_height="5dp"
                android:background="@drawable/progresser_line"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:orientation="vertical"
                >
            </LinearLayout>
            <ImageView
                android:id="@+id/img_play"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/play"
                android:layout_marginStart="13dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_switch"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/bt_save"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Save audio"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_audiolocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developped by "
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="38dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="65dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mouad677"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold|italic"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:src="@drawable/github"
            />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>